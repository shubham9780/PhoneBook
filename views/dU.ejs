<html>
<head>
        <link rel="stylesheet" type="text/css" href="pb.css">
<style>
table {
  border-collapse: collapse;
  width: 75%;
}

th, td {
  text-align: center;
  padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}

th {
   font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

</style>
</head>
<body>

<h2 style="font-size: 30; float:left; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Phone Book</h2>
<a onclick="adduser()"><button class="aub" id="au" style="margin-top:22px; background-color: #00a2ff;">Add User</button></a>
<a href="index.html"><button class="aub" id="lo" style="margin-top:22px; background-color: #F44336;">Logout</button></a>
<br>
<br><br>
<br><br>
<hr>
<table id="tab" style="float:left">
  <tr>
    <th>Name</th>
    <th>E-Mail</th>
    <th>Phone no.</th>
    <th>Address</th>
  </tr>
  <% data.forEach( (user)=>{%>
                        <tr>  
                            <td>
                                    <%- user.name %>
                            </td>  
                            <td>
                                    <%-user.email %>
                            </td> 
                            <td>
                                    <%-user.phone %>
                            </td> 
                            <td>
                                    <%-user.address %>
                            </td> 
                        <td>
                                <button class="aub" style="background-color: #F44336;">Delete</button><button class="aub">Edit</button>
                </td>
                        </tr>


<%})%>
</table>
<div id="frm" style="float:right; width: 20%;height:500px;" ></div>
</body>
<script src="pb.js" type="text/javascript"></script>
</html>